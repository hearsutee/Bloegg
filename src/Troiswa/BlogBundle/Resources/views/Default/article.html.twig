{% block content %}
<!-- Start Posts Container -->
<div class="col-2" id="post-container">
    <div class="wrap-col">



        <!-- Start Post Item -->
        <div class="post">
            <div class="post-margin">

                <div class="post-avatar">
                    <div class="avatar-frame"></div>
                    <img alt='' src='http://1.gravatar.com/avatar/16afd22c8bf5c2398b206a76c9316a3c?s=70&amp;d=http%3A%2F%2F1.gravatar.com%2Favatar%2Fad516503a11cd5ca435acc9bb6523536%3Fs%3D70&amp;r=G' class='avatar avatar-70 photo' height='70' width='70' />                </div>

                {#titire du post : #}

                <h4>{{ thearticle.titre }}</h4>
                <ul class="post-status">

                    {#date de creation du post : #}

                    <li><i class="fa fa-clock-o"></i>{{ thearticle.dateCreation|date('Y-m-d') }}</li>

                    {# AFAIRE, voir categorie a changer dynamiquement : #}

                    <li><i class="fa fa-folder-open-o"></i><a href="#" title="View all posts in Illustration" rel="category">Illustration</a></li>

                    {# AFAIRE, nombre comments a changer dynamiquement : #}

                    <li><i class="fa fa-comment-o"></i>No Comments</li>
                </ul>
                <div class="clear"></div>
            </div>

            <div class="featured-image">

                {# AFAIRE, image du post a changer dynamiquement : #}

                <img src="img/Port_Harbor1-610x350.jpg" class="attachment-post-standard "  />
                <div class="post-icon">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
            </div>

            <div class="post-margin">

                {#contenu du post : #}

                <p> {{ thearticle.contenu | raw }}</p>

                <!-- Post Tags -->

                <div class="post-tags">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-tags fa-stack-1x fa-inverse"></i>

                        {# AFAIRE, tags du post a changer dynamiquement, ou a enlever ? : #}

            </span><a href="#" rel="tag">Color Schemes</a>, <a href="#" rel="tag">Gallery</a>, <a href="#" rel="tag">Images</a>, <a href="#" rel="tag">Light</a>, <a href="#" rel="tag">Post</a>, <a href="#" rel="tag">Slider</a>, <a href="#" rel="tag">Standard</a></div>
                <div class="clear"></div>            <!-- End Post Tags -->

            </div>


            {# AFAIRE, FB, twitter, socials etc ... : #}

            <!-- Post Social -->
            <ul class="post-social">
                <li><a href="#" target="_blank"><i class="fa fa-facebook"></i></a></li>

                <li><a href="#" target="_blank"><i class="fa fa-twitter"></i></a></li>

                <li><a href="#" target="_blank"><i class="fa fa-google-plus"></i></a></li>

                <li><a href="#" target="_blank">
                        <i class="fa fa-linkedin"></i></a></li>
            </ul>
            <!-- End Post Social -->
            <div class="clear"></div>
