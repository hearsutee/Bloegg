                <h2>LEAVE A COMMENT</h2>

                {{ form_start(formComm, {'method':'POST','id':'formName'}) }}
                {{ form_errors(formComm) }}
                <div>
                    {{ form_label(formComm.auteur) }}
                    {{ form_widget(formComm.auteur,{'attr': {'placeholder':'auteur', 'class':'form-control'} }) }}
                    {{ form_errors(formComm.auteur) }}
                </div>

                <div>{{ form_label(formComm.contenu) }}
